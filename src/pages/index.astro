---
import Layout from "../layouts/Layout.astro";
import { PERSONAL_INFO } from "../data/site";
import { fetchGitHubRepos } from "../data/githubRepos.js";

// List of GitHub repos to include
const includedRepos = [
  "sales-data-pipeline",
  "customer_analytics_dashboard",
  "AI-Content-Analyzer",
  "mariyacarolg-portfolio",
  "Snake-game",
  "feedback-collector-analyzer-apps-script",
];

// Fetch all GitHub repos
const allProjects = await fetchGitHubRepos();

// Filter only the included repos
const projects = allProjects.filter((repo) =>
  includedRepos.includes(repo.title)
);

// Get the access key from the .env file
const web3formsKey = import.meta.env.PUBLIC_WEB3FORMS_ACCESS_KEY;
---

<Layout title={`Home | ${PERSONAL_INFO.name}`}>
  <main class="flex-grow">
    <!-- HERO SECTION -->
    <section id="hero" class="text-center py-20">
      <h1 class="text-5xl font-bold tracking-tighter sm:text-6xl md:text-7xl">
        {PERSONAL_INFO.name}
      </h1>
      <p
        class="mt-4 mx-auto max-w-[700px] text-lg text-gray-500 md:text-xl dark:text-gray-400"
      >
        {PERSONAL_INFO.tagline}
      </p>
    </section>

    <!-- GITHUB PROJECTS SECTION -->
    <section id="projects" class="py-20 px-8 bg-gray-50 dark:bg-gray-800">
      <h2 class="text-3xl font-bold text-center mb-8">My GitHub Projects</h2>
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto"
      >
        {
          projects.map((project) => (
            <a
              href={project.github}
              target="_blank"
              class="block border rounded-lg overflow-hidden shadow-lg bg-white dark:bg-gray-900 hover:scale-105 transition-transform"
            >
              <img
                src={project.img}
                alt={project.title}
                class="w-full h-48 object-cover"
              />
              <div class="p-4">
                <h3 class="font-bold text-lg">{project.title}</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1 h-16">
                  {project.description}
                </p>
                <div class="mt-4 flex flex-wrap gap-2">
                  {project.tags.map((tag) => (
                    <span class="text-xs bg-gray-200 dark:bg-gray-700 rounded-full px-2 py-1">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </section>

    <!-- ABOUT & CONTACT SECTION -->
    <section id="about" class="py-20 px-8">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">About Me</h2>
        <p class="text-lg text-gray-600 dark:text-gray-400">
          {PERSONAL_INFO.bio}
        </p>
      </div>
      <div class="max-w-xl mx-auto mt-12">
        <h2 class="text-3xl font-bold text-center mb-8">Get In Touch</h2>
        <form
          action="https://api.web3forms.com/submit"
          method="POST"
          class="space-y-4"
        >
          <input type="hidden" name="access_key" value={web3formsKey} />
          <div>
            <label for="name" class="block mb-2 text-sm font-medium"
              >Your Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="w-full p-2.5 border rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600"
              required
            />
          </div>
          <div>
            <label for="email" class="block mb-2 text-sm font-medium"
              >Your Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="w-full p-2.5 border rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600"
              required
            />
          </div>
          <div>
            <label for="message" class="block mb-2 text-sm font-medium"
              >Your Message</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full p-2.5 border rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600"
              required></textarea>
          </div>
          <button
            type="submit"
            class="w-full text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
          >
            Send Message
          </button>
        </form>
      </div>
    </section>
  </main>
</Layout>
