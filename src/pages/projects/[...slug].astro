---
// src/pages/projects/[...slug].astro
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

// This function runs at build time to tell Astro which pages to generate.
export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render(); // This gets the main markdown content
---

<Layout title={project.data.title}>
  <main class="flex-grow py-12 px-8">
    <article class="prose dark:prose-invert max-w-3xl mx-auto">
      <img
        src={project.data.img}
        alt={project.data.img_alt}
        class="w-full rounded-lg mb-4"
      />
      <h1>{project.data.title}</h1>
      <p class="lead">{project.data.description}</p>
      <div class="flex flex-wrap gap-2 my-4">
        {
          project.data.tags.map((tag) => (
            <span class="text-sm bg-gray-200 dark:bg-gray-700 rounded-full px-3 py-1">
              {tag}
            </span>
          ))
        }
      </div>
      <hr />
      <Content />
      <!-- This component renders your markdown body -->
    </article>
  </main>
</Layout>
